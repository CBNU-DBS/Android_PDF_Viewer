<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MotionSettingActivity"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/scrollDownTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="아래로 스크롤"
                android:textSize="24sp" />

            <Spinner
                android:id="@+id/scrollDownSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/motion_array"
                android:minHeight="48dp" />

            <TextView
                android:id="@+id/scrollUpTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="위로 스크롤"
                android:textSize="24sp" />

            <Spinner
                android:id="@+id/scrollUpSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/motion_array"
                android:minHeight="48dp" />

            <TextView
                android:id="@+id/nextPgTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="다음페이지"
                android:textSize="24sp" />

            <Spinner
                android:id="@+id/nextPgSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/motion_array"
                android:minHeight="48dp" />

            <TextView
                android:id="@+id/prevPgTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="이전페이지"
                android:textSize="24sp" />

            <Spinner
                android:id="@+id/prevPgSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/motion_array"
                android:minHeight="48dp" />

            <TextView
                android:id="@+id/backTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="뒤로가기"
                android:textSize="24sp" />

            <Spinner
                android:id="@+id/backSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/motion_array"
                android:minHeight="48dp" />

            <TextView
                android:id="@+id/searchTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="검색"
                android:textSize="24sp" />

            <Spinner
                android:id="@+id/searchSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/motion_array"
                android:minHeight="48dp" />

            <TextView
                android:id="@+id/zoomoutTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="페이지축소"
                android:textSize="24sp" />

            <Spinner
                android:id="@+id/zoomoutSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/motion_array"
                android:minHeight="48dp" />

            <TextView
                android:id="@+id/zoomInTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="페이지확대"
                android:textSize="24sp" />

            <Spinner
                android:id="@+id/zoomInSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/motion_array"
                android:minHeight="48dp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>