<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Personal_info_setting_Activity">

    <TextView
        android:id="@+id/Personal_info_setting_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="비밀번호 변경"
        android:textColor="#000000"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/currentPW_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="현재 비밀번호 확인"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.095"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Personal_info_setting_Title" />

    <TextView
        android:id="@+id/newPW_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="172dp"
        android:text="새 비밀번호"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.09"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Personal_info_setting_Title" />

    <Button
        android:id="@+id/currentPW_btn"
        android:layout_width="69dp"
        android:layout_height="50dp"
        android:layout_marginTop="154dp"
        android:text="확인"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.235"
        app:layout_constraintStart_toEndOf="@+id/et_currentPW"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_newPW"
        android:layout_width="274dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="   새 비밀번호를 입력해주세요"
        android:textSize="18sp"
        android:background="@drawable/edittext_border"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.233"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newPW_TextView" />

    <EditText
        android:id="@+id/et_confirm_newPW"
        android:layout_width="274dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="   새 비밀번호를 입력해주세요"
        android:textSize="18sp"
        android:inputType="textEmailAddress"
        android:background="@drawable/edittext_border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.233"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newPW2_TextView" />

    <!-- Password_changeEditText에서는 새로 바꿀 비밀번호를 가시적으로 확인하기 위해서
     inputType을 textPersonName으로 선택함. inputType을 Password로 하면 암호처리되서
     점으로 입력되어 변경하려는 비밀번호를 확인하지 못하는 경우 발생 (차재현)-->
    <TextView
        android:id="@+id/newPW2_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="292dp"
        android:text="새 비밀번호 확인"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.095"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Personal_info_setting_Title" />

    <Button
        android:id="@+id/changePW_btn"
        android:layout_width="69dp"
        android:layout_height="50dp"
        android:layout_marginTop="394dp"
        android:layout_marginEnd="22dp"
        android:text="변경"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/et_confirm_newPW"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_currentPW"
        android:layout_width="276dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="   현재 비밀번호를 입력해주세요"
        android:textSize="18sp"
        android:background="@drawable/edittext_border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.237"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/currentPW_TextView" />

    <Button
        android:id="@+id/btn_back_to_mypage"
        android:layout_width="210dp"
        android:layout_height="64dp"
        android:layout_marginBottom="96dp"
        android:text="마이페이지로 돌아가기"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>